	private void dealOtherPeriodWhere(WaLoginContext context) throws BusinessException {
		WaClassItemVO[] classItemVOs = getClassItemVOs();
		for (WaClassItemVO itemVO : classItemVOs) {
			if (itemVO.getVformula() != null && itemVO.getVformula().contains("waOtherPeriodData")) {
				String[] formulaItems = itemVO.getVformula().replace("waOtherPeriodData", "").replace("(", "")
						.replace("\"", "").replace(")", "").split(",");

				if (formulaItems[2] != null && formulaItems[2].length() == 6) {
					this.getDEUtil().decryptWaDataByCondition(
							"pk_wa_class = '" + formulaItems[0] + "' and cyearperiod='" + formulaItems[2]
									+ "' and pk_psndoc in (select pk_psndoc from wa_cacu_data where pk_wa_class = '"
									+ getLoginContext().getWaLoginVO().getPk_wa_class() + "' and creator='"
									+ getLoginContext().getPk_loginUser() + "')");
				}
			}
		}
	}

