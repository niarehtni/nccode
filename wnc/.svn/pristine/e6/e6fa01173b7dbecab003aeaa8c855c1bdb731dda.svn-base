			daySalaryVO.setPk_psnjob(psnjob.getPk_psnjob());
			daySalaryVO.setPk_psnorg(psnjob.getPk_psnorg());
			daySalaryVO.setPk_dept(psnjob.getPk_dept());
			daySalaryVO.setPk_dept_v(psnjob.getPk_dept_v());
