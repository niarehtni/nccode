	/**
	 * 算全薪，日薪，r薪
	 * 
	 * @param vo
	 * @param calculDate
	 * @return
	 * @throws BusinessException
	 */
	public DaySalaryVO[] calculBasicSalary(String pk_hrorg, DaySalaryVO[] vos,
			UFLiteralDate calculDate) throws BusinessException {
		String[] psnjobs = SQLHelper.getStrArray(vos, "pk_psnjob");
		String insql = new InSQLCreator().getInSQL(psnjobs, true);
		String qrySql = "SELECT\n" + "	pk_psnjob,\n"
				+ "	SUM (nmoney) as fullsalary\n" + "FROM\n"
				+ "	hi_psndoc_wadoc\n" + "WHERE\n" + "	pk_psnjob IN (" + insql
				+ ")\n" + "AND pk_org = '" + pk_hrorg + "'\n"
				+ "AND begindate <= '" + calculDate + "'\n"
				+ "AND (enddate >= '" + calculDate + "' OR enddate IS NULL)"
				+ "GROUP BY\n" + "	pk_psnjob";
		@SuppressWarnings("unchecked")
		List<HashMap<String, Object>> listMaps = (ArrayList<HashMap<String, Object>>) getDao()
				.executeQuery(qrySql.toString(), new MapListProcessor());
		Map<String, UFDouble> fullMap = new HashMap<String, UFDouble>();
		if (listMaps != null && listMaps.size() > 0) {
			for (int i = 0; i < listMaps.size(); i++) {
				HashMap<String, Object> hashMap = listMaps.get(i);
				String pk_psnjob = hashMap.get("pk_psnjob").toString();
				UFDouble fullsalary = new UFDouble(hashMap.get("fullsalary")
						.toString());
				fullMap.put(pk_psnjob, fullsalary);
			}
		}
		for (int i = 0; i < vos.length; i++) {
			DaySalaryVO daySalaryVO = vos[i];
			if (fullMap.containsKey(daySalaryVO.getPk_psnjob())) {
				UFDouble fullsalary = fullMap.get(daySalaryVO.getPk_psnjob());
				daySalaryVO.setFullsalary(fullsalary);
				daySalaryVO.setDaysalary(fullsalary.div(30.0));
				daySalaryVO.setHoursalary(fullsalary.div(240.0));
			}
		}
		return vos;
	}

	/**
	 * 计算加班相关信息
	 * 
	 * @param pk_hrorg
	 * @param vos
	 * @param calculDate
	 * @return
	 * @throws BusinessException
	 */
	public DaySalaryVO[] calculOvertimeInfo(String pk_hrorg, DaySalaryVO[] vos,
			UFLiteralDate calculDate) throws BusinessException {
		// 请求参数：Sting pk_psndoc[],UFLiteralDate calculDate--加班日期
		// 返回值：MAP<String,MAP<String,UFDouble>--->MAP<pk_psndoc,MAP<参数类型,数值>
		// 参数类型：加班rL(overtime) 平日加班时长(dailyovertime)休息日加班rL(restovertime)
		// 定假日加班rL(holidayovertime)加班M(overtimesalary)
		String[] psndocs = SQLHelper.getStrArray(vos, "pk_psndoc");
		ISegDetailService segService = NCLocator.getInstance().lookup(
				ISegDetailService.class);
		Map<String, Map<QueryValueTypeEnum, UFDouble>> overtimes = segService
				.getOvertimeHours(psndocs, calculDate);
		if (null == overtimes || overtimes.size() < 1) {
			return vos;
		}
		for (int i = 0; i < vos.length; i++) {
			DaySalaryVO daySalaryVO = vos[i];
			Map<QueryValueTypeEnum, UFDouble> overtimedetail = overtimes
					.get(daySalaryVO.getPk_psndoc());
			if (null == overtimedetail || overtimedetail.size() < 1) {
				continue;
			}
			daySalaryVO
					.setOvertime(overtimedetail.get(QueryValueTypeEnum.ALL) != null ? overtimedetail
							.get(QueryValueTypeEnum.ALL) : UFDouble.ZERO_DBL);
			daySalaryVO.setDailyovertime(overtimedetail
					.get(QueryValueTypeEnum.NORMAL) != null ? overtimedetail
					.get(QueryValueTypeEnum.NORMAL) : UFDouble.ZERO_DBL);
			daySalaryVO.setRestovertime(overtimedetail
					.get(QueryValueTypeEnum.OFFDAY) != null ? overtimedetail
					.get(QueryValueTypeEnum.OFFDAY) : UFDouble.ZERO_DBL);
			daySalaryVO.setHolidayovertime(overtimedetail
					.get(QueryValueTypeEnum.HOLIDAY) != null ? overtimedetail
					.get(QueryValueTypeEnum.HOLIDAY) : UFDouble.ZERO_DBL);
			daySalaryVO.setOvertimesalary(overtimedetail
					.get(QueryValueTypeEnum.TOTALFEE) != null ? overtimedetail
					.get(QueryValueTypeEnum.TOTALFEE) : UFDouble.ZERO_DBL);
		}
		return vos;
	}

	/**
	 * 计算假期相关信息
	 * 
	 * @param pk_hrorg
	 * @param vos
	 * @param calculDate
	 * @return
	 * @throws BusinessException
	 */
	public AggDaySalaryVO[] calculLeaveRegInfo(String pk_hrorg,
			DaySalaryVO[] vos, UFLiteralDate calculDate)
			throws BusinessException {
		String[] psnjobs = SQLHelper.getStrArray(vos, "pk_psnjob");
		String insql = new InSQLCreator().getInSQL(psnjobs, true);
		// 查询用户在生效日期是当前日期的所有休假单据
		String qrySql = "SELECT\n"
				+ "	leavereg.pk_psnjob,\n"
				+ "	leavereg.pk_leavereg,\n"
				+ "	leavereg.pk_leavereg_history,\n"
				+ "	leavereg.pk_psndoc,\n"
				+ "	leavereg.pk_leavetype,\n"
				+ "	leavereg.pk_leavetypecopy,\n"
				+ "	leavereg.pk_org,\n"
				+ "	leavereg.effectivedate,\n"
				+ "	leavereg.leavebegindate,\n"
				+ "	leavereg.leaveenddate,\n"
				+ "	leavereg.leavebegintime,\n"
				+ "	leavereg.leaveendtime,\n"
				+ "	leavereg.leavehour,\n"
				+ "	leavereg.ischarge,\n"
				+ "	leavereg.charge,\n"
				+ "	leavereg.actualcharge,\n"
				+ "	leavereg.isleaveoff,\n"
				+ "	leavereg2.effectivedate AS effectivedate2,\n"
				+ "	leavereg2.ischarge AS ischarge2,\n"
				+ "	leavereg2.charge AS charge2,\n"
				+ "	leavereg2.actualcharge AS actualcharge2,\n"
				+ "	timeitem.rate\n"
				+ "FROM\n"
				+ "	tbm_leavereg_history leavereg\n"
				+ "LEFT JOIN tbm_timeitemcopy timeitem ON leavereg.pk_leavetypecopy = timeitem.pk_timeitemcopy\n"
				+ "LEFT JOIN tbm_leavereg_history leavereg2 ON leavereg.pk_leavereg = leavereg2.pk_leavereg\n"
				+ "WHERE\n" + "	leavereg.effectivedate = '" + calculDate
				+ "'\n" + "AND timeitem.ischarge = 'Y'\n"
				+ "AND ISNULL(leavereg.dr, 0) = 0\n"
				+ "AND ISNULL(leavereg2.dr, 0) = 0\n"
				+ "AND leavereg.pk_psnjob IN (" + insql + ")";
		HashMap<Object, HashMap<Object, HashMap<Object, GeneralVO>>> psnJobLeaveVoMap = executeQuery(qrySql);
		// 计算日薪
		getDaySalaryMap(psnjobs, calculDate);
		List<AggDaySalaryVO> listSalaryVOs = new ArrayList<AggDaySalaryVO>();
		for (int i = 0; i < vos.length; i++) {
			DaySalaryVO daySalaryVO = vos[i];
			AggDaySalaryVO aggDaySalaryVO = new AggDaySalaryVO();
			aggDaySalaryVO.setParentVO(daySalaryVO);
			HashMap<Object, HashMap<Object, GeneralVO>> leaveVoMap = psnJobLeaveVoMap
					.get(daySalaryVO.getPk_psnjob());
			if (leaveVoMap == null || leaveVoMap.size() < 1) {
				listSalaryVOs.add(aggDaySalaryVO);
				continue;
			}
			for (Object pk_leavereg : leaveVoMap.keySet()) {

				HashMap<Object, GeneralVO> leaveregMap = leaveVoMap
						.get(pk_leavereg);
				GeneralVO gvo = null;
				for (Object pk_leavereg_history : leaveregMap.keySet()) {
					if (null == gvo) {
						gvo = leaveregMap.get(pk_leavereg_history);
					} else {
						UFBoolean ischarge1 = gvo
								.getAttributeValue("ischarge2") != null ? new UFBoolean(
								gvo.getAttributeValue("ischarge").toString())
								: UFBoolean.FALSE;
						GeneralVO gvo2 = leaveregMap.get(pk_leavereg_history);
						UFBoolean ischarge2 = gvo2
								.getAttributeValue("ischarge2") != null ? new UFBoolean(
								gvo2.getAttributeValue("ischarge").toString())
								: UFBoolean.FALSE;
						if (!ischarge1.booleanValue()) {
							gvo = gvo2;
						} else if (ischarge2.booleanValue()) {
							UFLiteralDate effectivedate1 = gvo
									.getAttributeValue("effectivedate2") != null ? new UFLiteralDate(
									gvo.getAttributeValue("effectivedate2")
											.toString()) : calculDate;
							UFLiteralDate effectivedate2 = gvo2
									.getAttributeValue("effectivedate2") != null ? new UFLiteralDate(
									gvo2.getAttributeValue("effectivedate2")
											.toString()) : calculDate;
							if (effectivedate2.before(calculDate)
									&& effectivedate2.after(effectivedate1)) {
								gvo = gvo2;
							}
						}
					}
				}
				aggDaySalaryVO = createLeaveRegDetailVO(aggDaySalaryVO, gvo);
				listSalaryVOs.add(aggDaySalaryVO);
			}
		}
		return listSalaryVOs.toArray(new AggDaySalaryVO[0]);
	}

	/**
	 * 添加一条休假记录产生的休假明细
	 * 
	 * @param aggSalaryVO
	 * @param gvo
	 * @return
	 * @throws BusinessException
	 */
	public AggDaySalaryVO createLeaveRegDetailVO(AggDaySalaryVO aggSalaryVO,
			GeneralVO gvo) throws BusinessException {
		List<LeaveRegDetailVO> listRegDetailVOs = new ArrayList<LeaveRegDetailVO>();
		UFLiteralDate leavebegindate = new UFLiteralDate(gvo.getAttributeValue(
				"leavebegindate").toString());// 休假开始时间
		UFLiteralDate leaveenddate = new UFLiteralDate(gvo.getAttributeValue(
				"leaveenddate").toString());// 休假结束时间
		UFBoolean ischarge = gvo.getAttributeValue("ischarge") != null ? new UFBoolean(
				gvo.getAttributeValue("ischarge").toString()) : UFBoolean.FALSE;// 当前结算状态
		UFBoolean ischarge2 = gvo.getAttributeValue("ischarge2") != null ? new UFBoolean(
				gvo.getAttributeValue("ischarge2").toString())
				: UFBoolean.FALSE;// 历史结算状态
		String pk_leavereg_history = getStr(gvo
				.getAttributeValue("pk_leavereg_history"));
		LeaveRegVO leaveRegVO = generalVOToLeaveRegVO(gvo);
		// 休假开始时间和休假结束时间相同
		if (leavebegindate.equals(leaveenddate)) {
			LeaveRegDetailVO detailVO = generalVOToLeaveRegDateilVO(gvo,
					leaveRegVO, aggSalaryVO.getParentVO());
			// 未结算，需要反写信息
			if (!ischarge.booleanValue()) {
				// 扣款金额
				UFDouble charge = detailVO.getLeavecharge();
				if (ischarge2.booleanValue()) {
					UFDouble actualcharge2 = new UFDouble(gvo
							.getAttributeValue("actualcharge2").toString());
					detailVO.setLeavecharge(charge.sub(actualcharge2));
					updateleavereghistorySql
							.append("update tbm_leavereg_history set ischarge='Y',charge='"
									+ charge.sub(actualcharge2)
									+ "',actualcharge='"
									+ charge
									+ "' where pk_leavereg_history='"
									+ pk_leavereg_history + "';");
				} else {
					detailVO.setLeavecharge(charge);
					updateleavereghistorySql
							.append("update tbm_leavereg_history set ischarge='Y',charge='"
									+ charge
									+ "',actualcharge='"
									+ charge
									+ "' where pk_leavereg_history='"
									+ pk_leavereg_history + "';");
				}
			}
			aggSalaryVO.getParentVO().setLeavecharge(
					aggSalaryVO.getParentVO().getLeavecharge()
							.add(detailVO.getLeavecharge()));
			listRegDetailVOs.add(detailVO);
		} else {
			// 拆单
			int betweens = UFLiteralDate.getDaysBetween(leavebegindate,
					leaveenddate);
			UFDouble totalCharge = UFDouble.ZERO_DBL;
			for (int i = 0; i <= betweens; i++) {
				if (i == 0) {// 开始日期第一天
					String endtimeStr = leavebegindate.toString() + " 23:59:59";
					leaveRegVO.setLeaveenddate(leavebegindate);
					leaveRegVO.setLeaveendtime(new UFDateTime(endtimeStr));

				} else if (i == betweens) {// 最后一天
					String begintimeStr = leaveenddate.toString() + " 00:00:00";
					leaveRegVO.setLeavebegindate(leaveenddate);
					leaveRegVO.setLeavebegintime(new UFDateTime(begintimeStr));
				} else {// 中间时间
					UFLiteralDate calculDate = leavebegindate.getDateAfter(i);
					String begintimeStr = calculDate.toString() + " 00:00:00";
					String endtimeStr = calculDate.toString() + " 23:59:59";
					leaveRegVO.setLeavebegindate(calculDate);
					leaveRegVO.setLeaveenddate(calculDate);
					leaveRegVO.setLeavebegintime(new UFDateTime(begintimeStr));
					leaveRegVO.setLeaveendtime(new UFDateTime(endtimeStr));
				}
				// 计算休假时长
				leaveRegVO = getDisplayer().calculate(leaveRegVO,
						TimeZone.getDefault());
				if (leaveRegVO.getLeavehour().equals(UFDouble.ZERO_DBL)) {
					continue;
				}
				LeaveRegDetailVO detailVO = generalVOToLeaveRegDateilVO(gvo,
						leaveRegVO, aggSalaryVO.getParentVO());
				totalCharge.add(detailVO.getLeavecharge());
				listRegDetailVOs.add(detailVO);
			}
			if (ischarge2.booleanValue()) {
				LeaveRegDetailVO detailVO = generalVOToLeaveRegDateilVO(gvo,
						leaveRegVO, aggSalaryVO.getParentVO());
				UFDouble actualcharge2 = new UFDouble(gvo.getAttributeValue(
						"actualcharge2").toString());
				detailVO.setLeavecharge(totalCharge.sub(actualcharge2));
				listRegDetailVOs.clear();
				listRegDetailVOs.add(detailVO);
				aggSalaryVO.getParentVO().setLeavecharge(
						aggSalaryVO.getParentVO().getLeavecharge()
								.add(detailVO.getLeavecharge()));
				updateleavereghistorySql
						.append("update tbm_leavereg_history set ischarge='Y',charge='"
								+ totalCharge.sub(actualcharge2)
								+ "',actualcharge='"
								+ totalCharge
								+ "' where pk_leavereg_history='"
								+ pk_leavereg_history + "';");
			} else {
				aggSalaryVO.getParentVO().setLeavecharge(
						aggSalaryVO.getParentVO().getLeavecharge()
								.add(totalCharge));
				updateleavereghistorySql
						.append("update tbm_leavereg_history set ischarge='Y',charge='"
								+ totalCharge
								+ "',actualcharge='"
								+ totalCharge
								+ "' where pk_leavereg_history='"
								+ pk_leavereg_history + "';");
			}
		}
		LeaveRegDetailVO[] leaveRegDetailVOs = (LeaveRegDetailVO[]) aggSalaryVO
				.getChildrenVO();
		if (null == leaveRegDetailVOs || leaveRegDetailVOs.length < 1) {
			aggSalaryVO.setChildrenVO(listRegDetailVOs
					.toArray(new LeaveRegDetailVO[0]));
		} else {
			List<LeaveRegDetailVO> liDetailVOs = Arrays
					.asList(leaveRegDetailVOs);
			listRegDetailVOs.addAll(liDetailVOs);
			aggSalaryVO.setChildrenVO(listRegDetailVOs
					.toArray(new LeaveRegDetailVO[0]));
		}
		return aggSalaryVO;
	}

