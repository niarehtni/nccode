	public LeaveRegDetailVO generalVOToLeaveRegDateilVO(GeneralVO gvo,
			LeaveRegVO leaveRegVO, DaySalaryVO daySalaryVO)
			throws BusinessException {
		LeaveRegDetailVO detailVO = new LeaveRegDetailVO(daySalaryVO);
		String pk_leavereg_history = getStr(gvo
				.getAttributeValue("pk_leavereg_history"));
		detailVO.setPk_leavereg_history(pk_leavereg_history);// 来源单据主键
