	public AggDaySalaryVO[] calculSalaryByPsnjobs2(WaDayLoginContext context,
			String pk_hrorg, String[] pk_psnjobs, String calculDate)
			throws BusinessException {
		
		if (ArrayUtils.isEmpty(pk_psnjobs)) {
			throw new BusinessException("未查到需要算的人T");
		}
		UFLiteralDate calculDate2 = null;
		try {
			calculDate2 = new UFLiteralDate(calculDate);
		} catch (Exception e) {
			Logger.error(e);
			throw new BusinessException("日期格式e`，z查！");
		}
		//校薪Yl放Y果
		validateWadataIssue(pk_hrorg, pk_psnjobs, calculDate2);
		// 1、根人T基本信息，建初始化Vo
		DaySalaryVO[] basicVos = createBaiscVO(context, pk_psnjobs, pk_hrorg,
				calculDate2);
		// 2、算日薪，全薪，r薪
		calculBasicSalary(pk_hrorg, basicVos, calculDate2);
		// 3、计算加班相关信息
		calculOvertimeInfo(pk_hrorg, basicVos, calculDate2);
		// 4、计算假期时长等信息
		AggDaySalaryVO[] aggSalaryVOs = calculLeaveRegInfo(pk_hrorg, basicVos,
				calculDate2);

		// 5、保存结果，并删除原结果
		String[] psnjobs = SQLHelper.getStrArray(basicVos, "pk_psnjob");
		String insql = new InSQLCreator().getInSQL(psnjobs, true);
		getDao().deleteByClause(
				DaySalaryVO.class,
				"pk_psnjob in (" + insql + ") and salarydate='" + calculDate2
						+ "'");
		getDao().deleteByClause(
				LeaveRegDetailVO.class,
				"pk_psnjob in (" + insql + ") and effectivedate='"
						+ calculDate2 + "'");
		// 6、插入数据
		IWadaysalaryMaintain wadayService = NCLocator.getInstance().lookup(
				IWadaysalaryMaintain.class);
		return wadayService.insert(aggSalaryVOs);
	}

