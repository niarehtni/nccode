	/**
	 * 校验组织人员薪资是否已经计算，如已经计算则不允许重新计算
	 * 
	 * @param pk_hrorg
	 * @param pk_psnjobs
	 * @param calculDate
	 * @throws BusinessException
	 */
	public void validateWadataIssue(String pk_hrorg, String[] pk_psnjobs,
			UFLiteralDate calculDate) throws BusinessException {
		int year=calculDate.getYear();
		String month=calculDate.getStrMonth();
		//查询当前组织薪资方案未发放的个数，当未发放的薪资方案的个数为0时，抛出异常：薪资方案已全部发放，不允许再次计算
		String qryCountSql="SELECT\n" +
				"	count(*)\n" +
				"FROM\n" +
				"	wa_periodstate wps\n" +
				"INNER JOIN wa_waclass wc ON wps.pk_wa_class = wc.pk_wa_class\n" +
				"INNER JOIN wa_period wp ON wps.pk_wa_period = wp.pk_wa_period\n" +
				"WHERE\n" +
				"	wc.pk_org = '"+pk_hrorg+"'\n" +
				"AND (\n" +
				"	wc.stopflag = N'~'\n" +
				"	OR wc.stopflag = N'N'\n" +
				")\n" +
				"AND wp.cyear = '"+year+"'\n" +
				"AND wp.cperiod = '"+month+"'\n" +
				"and wps.payoffflag='N'";//薪资未发放
		int count=(int) getDao().executeQuery(qryCountSql, new ColumnProcessor());
		if(count==0){
			throw new BusinessException("人力Y源M的薪Y方案已全部l放，不允S重}算！或者人力Y源M未添加薪Y方案或者未初始化薪Y期g，z查！");
		}
	}

